<%- include('header') -%>

    <% if(info.length){ %>
        <% if(info=="Apply successfully." ){ %>
            <div class="alert alert-primary">
                <%= info %>
            </div>
            <% } else { %>
                <div class="alert alert-danger">
                    <%= info %>
                </div>
                <% } %>
                    <% } %>
    <div class="container mt-2">
        <div class="row">
            <div class="col-md-6 center-block offset-md-3">
                <div class="card text-center">
                    <div style="font-size: 1.5rem; font-weight:bold" class="card-header">Apply for certificate issuance
                    </div>
                    <div class="card-body">
                        <form action="/E-portfolio/localEducationMinistry/applyCert" method="post" id="apply">
                            <div class="input-group">
                                <div class="input-group-prepend"><span id=""
                                        class="input-group-text">Activity Name</span>
                                </div>
                                <input type="text" name="activityName"
                                    placeholder="Enter Activity Name" required="required"
                                    class="form-control">
                            </div>
                            <div class="input-group mt-3">
                                <div class="input-group-prepend"><span id=""
                                    class="input-group-text">Type</span>
                                </div>
                                <select class="form-control" form="apply" name="type">
                                    <option value="" disabled selected>Select activity type</option>
                                    <option value="contest">競賽</optin>
                                    <option value="cource">課程</option>
                                    <option value="exam">測驗</option>
                                </select>
                            </div>
                            <div class="input-group mt-3">
                                <div class="input-group-prepend"><span id=""
                                    class="input-group-text">Number</span>
                                </div>
                                <input type="text" name="number"
                                    placeholder="Enter Number of issued" required="required"
                                    class="form-control">
                            </div>
                            <!--
                            <div class="input-group mt-3">
                                <div class="input-group-prepend"><span id=""
                                    class="input-group-text">API format</span>
                                </div>
                                <input type="text" name="API"
                                    placeholder="Enter API format " required="required"
                                    class="form-control">
                            </div>
                            <div class="input-group mt-3">
                                <div class="input-group-prepend"><span id=""
                                    class="input-group-text">Img url</span>
                                </div>
                                <input type="text" name="ImgUrl"
                                    placeholder="Enter image url" required="required"
                                    class="form-control">
                            </div>
                            -->

                            <input type="submit" value="申請" class="btn btn-primary btn-lg btn-block mt-3">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('footer') -%>